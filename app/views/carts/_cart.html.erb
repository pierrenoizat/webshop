<!DOCTYPE html>
<% unless cart.line_items.empty? %>
<div class="cart_title"><%= t('.title') %></div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<% if @order.nil? %>
<%= button_to t('.checkout'), new_order_path, :class => 'submit_class', :method => :get %>
<%= button_to t('.empty'), cart, :class => 'submit_class', :method => :delete,
:confirm => t('.sure') %><br />
<% end %>
<% end %>
